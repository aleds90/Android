<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="@android:color/white"
        android:backgroundTint="@android:color/primary_text_light"
        android:id="@+id/root">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_hamburger"
                android:background="@color/background"
                style="@style/Toolbar"
                app:contentInsetStart="0dp">

                <ImageView
                    android:id="@+id/content_hamburger"
                    style="@style/ImageView.Hamburger"
                    android:src="@drawable/ic_menu_black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ricerca"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"
                    android:textSize="30dp"/>

            </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="vertical"
        android:weightSum="1">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Find by name"
            android:id="@+id/search_namefilter_actv"
            />
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Find by Role"
            android:id="@+id/search_rolefilter_actv"/>
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Find by City"
            android:id="@+id/search_cityfilter_actv"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:backgroundTint="@android:color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:background="@android:color/white"
                android:textAlignment="inherit"
                android:text="Max: 200$/h"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:id="@+id/search_rate_tv"
                android:layout_gravity="center_vertical" />
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="10dp"
                android:id="@+id/search_ratefilter_sb"/>
        </LinearLayout>
    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="56.10">
                <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AVVIA RICERCA"
                android:id="@+id/search_startsearch_btn"
                android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/background"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/searchListViewLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="253dp">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="255dp"
                android:id="@+id/search_resultlist_lv" />
            </LinearLayout>

            <LinearLayout
                android:background="#F4C430"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/background">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageButton
                        android:src="@drawable/ic_home_white_24dp_xhdpi"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginRight="8dp"
                        android:background="?selectableItemBackground"
                        android:id="@+id/home"/>
                    <ImageButton
                        android:src="@drawable/ic_search_white_24dp_xhdpi"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="48dp"
                        android:background="?selectableItemBackground"
                        android:id="@+id/search" />
                    <ImageButton
                        android:src="@drawable/ic_message_white_24dp_xhdpi"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="8dp"
                        android:background="?selectableItemBackground"
                        android:id="@+id/relation"/>
                    <ImageView
                        android:id="@+id/messages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="25dp"
                        android:src="@drawable/ic_filter_1_white_24dp"/>
                    <ImageButton
                        android:src="@drawable/ic_person_white_24dp_xhdpi"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="end"
                        android:layout_marginRight="18dp"
                        android:background="?selectableItemBackground"
                        android:id="@+id/profile" />
                </android.support.v7.widget.Toolbar>

            </LinearLayout>

</LinearLayout>
</FrameLayout>