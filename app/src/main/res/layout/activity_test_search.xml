<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="@android:color/white"
        android:backgroundTint="@android:color/primary_text_light"
        android:id="@+id/root">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_hamburger"
                android:background="@color/background"
                style="@style/Toolbar"
                app:contentInsetStart="0dp">

                <ImageView
                    android:id="@+id/content_hamburger"
                    style="@style/ImageView.Hamburger"
                    android:src="@drawable/ic_menu_black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOME"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"
                    android:textSize="30dp"/>

            </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="vertical"
        android:weightSum="1">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Find by name"
            android:id="@+id/searchNameText"
            />
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Find by Role"
            android:id="@+id/searchRoleText"/>
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Find by City"
            android:id="@+id/searchCityText"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:backgroundTint="@android:color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:background="@android:color/white"
                android:textAlignment="inherit"
                android:text="Max 200$/h"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:id="@+id/searchRateText"
                android:layout_gravity="center_vertical" />
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="10dp"
                android:id="@+id/searchRateSeekBar"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="56.10">


                <!--<Button-->
                <!--style="?android:attr/buttonStyleSmall"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="START SEARCHING"-->
                <!--android:id="@+id/buttonSTART"-->
                <!--android:layout_gravity="center_horizontal" />-->

            </LinearLayout>




    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="234dp">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="215dp"
            android:id="@+id/listViewSearched" />
    </LinearLayout>

            <LinearLayout
                android:background="#F4C430"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:backgroundTint="@color/background">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/buttonHOME"
                    android:layout_weight="0.25"
                    android:background="@drawable/homeb"
                    android:layout_margin="5dp"
                    android:padding="5dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonSEARCH"
                    android:layout_weight="0.25"
                    android:background="@drawable/search"
                    android:padding="5dp"
                    android:layout_margin="5dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/buttonFOLLOW"
                    android:layout_weight="0.25"
                    android:background="@drawable/follow"
                    android:padding="5dp"
                    android:layout_margin="5dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/buttonPROFILE"
                    android:layout_weight="0.25"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/profile" />
            </LinearLayout>

</LinearLayout>
</FrameLayout>