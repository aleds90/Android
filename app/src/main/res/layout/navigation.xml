<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent_black">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp"
        android:backgroundTint="@color/background">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu_90" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/test"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/setting_textview"
            style="@style/TextView.GuillotineItem.Selected"
            android:textColor="@android:color/white"
            android:text="SETTINGS" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tests"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin"
        android:gravity="center_horizontal">



        <TextView
            android:id="@+id/status_textview"
            style="@style/TextView.GuillotineItem.Selected"
            android:textColor="@android:color/white"
            android:text="STATUS: DISPONIBILE"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content" />
    </LinearLayout>
    <LinearLayout
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/logout_textview"
            style="@style/TextView.GuillotineItem.Selected"
            android:textColor="@android:color/white"
            android:text="LOGOUT" />
    </LinearLayout>
    <LinearLayout

        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/delete_textview"
            style="@style/TextView.GuillotineItem.Selected"
            android:textColor="@android:color/white"
            android:text="DELETE" />
    </LinearLayout>


</LinearLayout>